<prism:PrismApplication xmlns="https://github.com/avaloniaui"
                        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                        x:Class="ImageCare.UI.Avalonia.App"
                        xmlns:prism="http://prismlibrary.com/"
                        xmlns:semi="https://irihi.tech/semi"
                        xmlns:u-semi="https://irihi.tech/ursa/themes/semi">

    <prism:PrismApplication.Styles>
        <semi:SemiTheme Locale="ru-RU" />
        <u-semi:SemiTheme Locale="ru-RU" />

        <StyleInclude Source="avares://IconPacks.Avalonia.Lucide/Lucide.axaml" />

    </prism:PrismApplication.Styles>

    <Application.Resources>
        <ResourceDictionary>

            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Dark">
                    <SolidColorBrush x:Key="ToggleButtonPrimaryCheckedBackground"
                                     Color="{DynamicResource SemiIndigo2Color}" />
                </ResourceDictionary>
            </ResourceDictionary.ThemeDictionaries>

            <ResourceDictionary.MergedDictionaries>
                <MergeResourceInclude Source="/Styles/Sizes.axaml" />
            </ResourceDictionary.MergedDictionaries>

        </ResourceDictionary>

    </Application.Resources>


</prism:PrismApplication>